@model TweeterApp.Models.CommentModel

<h2>Удаление комментария</h2>

<p>Вы уверены, что хотите удалить комментарий?</p>

<form asp-action="DeleteComment" method="post">
    <input type="hidden" name="commentid"  value="@Model.Id"/>
    <input type="hidden" name="postId" value="@Model.PostId"/>
    <button type="submit">Удалить</button>
    <a asp-action="Details" asp-controller="Post" asp-route-id="@Model.PostId">Отмена</a>
</form>