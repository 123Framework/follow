@model TweeterApp.Models.ViewModels.EditCommentViewModel

<h2>Редактировать коммент</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CommentId" />
    <input type="hidden" asp-for="PostId" />

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>


    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Details" asp-controller="Post" asp-route-id="@Model.PostId" class="btn btn-secondary">Cancel</a>

</form>

