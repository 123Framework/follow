@model TweeterApp.Models.ViewModels.LoginViewModel

<div class="wrapper">
    <h2>Login</h2>
    <form asp-action="Login" method="post">
        <div class="input-box">
            <input asp-for="Email" class="form-control" placeholder="Enter your email" required />
        </div>
        <div class="input-box">
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required />
        </div>
        <div class="input-box button">
            <button type="submit">Login</button>
        </div>
        <div class="text">
            <h3>Don't have an account? <a asp-action="Register">Register now</a></h3>
        </div>
    </form>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }
    body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #4070f4;
    }
    .wrapper {
        max-width: 430px;
        width: 100%;
        background: #fff;
        padding: 34px;
        border-radius: 6px;
        box-shadow: 0 5px 10px rgba(0,0,0,0.2);
    }
    .wrapper h2 {
        font-size: 22px;
        font-weight: 600;
        color: #333;
        position: relative;
    }
    .wrapper h2::before {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        height: 3px;
        width: 28px;
        background: #4070f4;
        border-radius: 12px;
    }
    form {
        margin-top: 30px;
    }
    .input-box {
        height: 52px;
        margin: 18px 0;
    }
    .input-box input {
        height: 100%;
        width: 100%;
        padding: 0 15px;
        font-size: 17px;
        border: 1.5px solid #C7BEBE;
        border-bottom-width: 2.5px;
        border-radius: 6px;
        transition: all 0.3s ease;
        outline: none;
    }
    .input-box input:focus,
    .input-box input:valid {
        border-color: #4070f4;
    }
    .input-box.button button {
        width: 100%;
        height: 100%;
        background: #4070f4;
        border: none;
        color: #fff;
        font-size: 17px;
        font-weight: 500;
        border-radius: 6px;
        cursor: pointer;
        transition: background 0.3s ease;
    }
    .input-box.button button:hover {
        background: #0e4bf1;
    }
    .text h3 {
        text-align: center;
        color: #333;
        font-size: 14px;
        margin-top: 10px;
    }
    .text h3 a {
        color: #4070f4;
        text-decoration: none;
    }
    .text h3 a:hover {
        text-decoration: underline;
    }
</style>