@model TweeterApp.Models.PostModel

    <h2>@Model.Title</h2>
    <p>@Model.Content</p>
    <h3>Comments</h3>
       // await Html.RenderActionAsync("GetComments", "Comment", new { postId = Model.Id });
       @await Html.PartialAsync("_CommentsPartial", Model.Comments)
    
    



<form asp-controller="Comment" asp-action="Add" method="post">
    <input type="hidden" name="postId" value="@Model.Id"/>
    <textarea name="content" placeholder="Add a comment.." required></textarea>
    <button type="submit">Comment</button>
</form>
